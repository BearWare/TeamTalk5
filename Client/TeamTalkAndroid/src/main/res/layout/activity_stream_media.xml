<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">

    <EditText
        android:id="@+id/file_path_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:inputType="text"
        android:singleLine="true"
        android:hint="@string/filepathlab"
        android:importantForAutofill="no" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/media_file_select_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/button_select_media_file" />
    <Button
        android:id="@+id/media_file_stream_btn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:text="@string/button_stream_media_file" />
</LinearLayout>
