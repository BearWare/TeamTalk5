FROM ubuntu:22.04

LABEL Description="TeamTalk for Android in Ubuntu 22.04"

RUN apt update --fix-missing
# Duplicate of /TeamTalk5/Build/Makefile:depend-ubuntu22-android
RUN apt install -y \
                   autoconf \
                   cmake \
                   curl \
                   doxygen \
                   git \
                   junit4 \
                   libtool \
                   make \
                   ninja-build \
                   openjdk-18-jdk \
                   p7zip-full \
                   pkg-config \
                   python2 \
                   python3-pytest \
                   unzip

RUN update-alternatives --install /usr/bin/python python /usr/bin/python3 10
RUN mkdir /root/tt5dist
RUN curl https://dl.google.com/android/repository/android-ndk-r27c-linux.zip -o /root/tt5dist/android-ndk.zip
RUN cd /root/tt5dist && unzip android-ndk.zip
